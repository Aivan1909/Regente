<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/TVMateriaNotas"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="MATERIA"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/TVPrimeraNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Primer \nParcial"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVSegundaNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Segundo \nParcial"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVExamenNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Examen \nFinal"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/LVNotas"
        android:layout_width="match_parent"
        android:layout_height="400dp" />


</LinearLayout>